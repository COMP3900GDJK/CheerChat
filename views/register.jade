extends layout

block content
	.container
		h1 Register Page
		if(error)
			p.lead Sorry the username you requested already exists. Please choose a new one.
		else 
			p.lead
		form(role='form', action="/register",method="post", style='max-width: 300px;')
			.form-group
					//input.form-control(type='text', name="username", placeholder='Enter Username')
					input.form-control(type='text', name='username', pattern='[a-zA-Z0-9._%+-]+@hssbc\.ca$', placeholder='Example@hssbc.ca', title='Please enter your BCCSS email')

			.form-group
				input.form-control(type='password', name="password", placeholder='Password')
			button.btn.btn-default(type='submit') Submit
			&nbsp;
			a(href='/')
				button.btn.btn-primary(type="button") Cancel